#! /bin/sh
{{ ansible_managed | comment }}

# MG From install_backup_scripts cookbook. Do not edit this file on the
# server; it's configured by chef and the volume IDs will be updated
# if they are changed by a server reconfiguration.

now=`date -Iminutes`
aws ec2 create-snapshot --volume-id {{ www_volume_id }} --description {{ inventory_hostname }}-www-backup-$now --no-paginate --output text
aws ec2 create-snapshot --volume-id {{ db_volume_id }} --description {{ inventory_hostname }}-db-backup-$now --no-paginate --output text
